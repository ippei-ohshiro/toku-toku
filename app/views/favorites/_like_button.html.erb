<% if current_user.favpost?(spot) %>
  <%= form_for(current_user.favorites.find_by(spot_id: spot.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :spot_id, spot.id %>
    <%= f.submit 'お気に入り登録解除', class: 'btn btn-danger' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :spot_id, spot.id %>
    <%= f.submit 'お気に入り登録', class: 'btn btn-primary' %>
  <% end %>
<% end %>