<h1 class="text-center mb-5">全てのユーザー</h1>
<% if users.any? %>
  <%= paginate users %>
  <ul class="list-unstyled mt-5 mb-5">
    <% users.each do |user| %>
      <li class="media border-bottom mb-3">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>